{
  "compilerOptions": {
    "outDir": "./src/",
    "noImplicitAny": false,
    "noImplicitThis": false,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "jsx": "preserve",
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "src/**/*.vue"],
  "exclude": [
    "dist",
    "**/*.test.ts",
    "**/*.exclude.ts",
    "node_modules"
  ]
}
